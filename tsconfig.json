{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020", "dom"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": ["node", "jest"],
    "typeRoots": ["./src/typings", "./node_modules/@types"],
  },
  "ts-node": {
    "esm": true,
    "files": true
  },
  "exclude": [
    "dist",
    "migrations",
    "node_modules"
  ]
}